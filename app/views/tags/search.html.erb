<% provide(:title, params[:tag]) %>

<div class="col-md-10 col-xs-10">
	<h1 class="text-center">IMAGINE BOARD</h1>
	<hr>
	<h3>Search Results</h3>
	<% unless @tag.nil? %>
		<h5>All pictures tagged by <strong><%= params[:tag] %>(<%= @images.count%>)</strong></h5>
	<% else %>
		<h5>No results found</strong></h5>
	<% end %>
</div>

<% unless @tag.nil? %>
<%= render 'shared/images' %>
<% end %>