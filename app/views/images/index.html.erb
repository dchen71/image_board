<% provide(:title, "Index") %>
<% unless signed_in? %>
<%= link_to "New User", new_user_path %>
<%= link_to "Login", login_path %>
<% end %>
<% if signed_in? %>
<%= link_to "Logout", logout_path %>
<% end %>
<div class="container">
	<h1 class="text-center">IMAGINE BOARD</h1>
	<% unless flash[:error].nil? %>
	<div class="alert alert-danger">
		<button type="button" class="close" data-dismiss="alert" >×</button>
		<strong><%= flash[:error] %></strong>
	</div>
	<% end %>
        
	<% if flash[:success] %>
		<div class="alert alert-success">
			<button type="button" class="close" data-dismiss="alert" >×</button>
			<strong><%= flash[:success] %></strong>
		</div>
	<% end %>
	<% if signed_in? %>
	<div class="upload">
		<%= form_for @image do |form| %>
		  <%= form.file_field :pictures, :class=> "col-md-4" %>
		  <%= form.label :tags, :class=> "pull-left" %>
		  <%= form.hidden_field :user_id, :value => current_user.id %>
		  <%= form.text_field :tags, :class=> "col-md-4" %>
		  <%= form.submit 'Submit', :class=> "col-md-offset-1" %>
		<% end %>
	</div>
	<% end %>
	<div class="image-board">
		<% unless @images.nil? %>
			<% @images.each do |i| %>
				<%= link_to image_tag(i.pictures.url),image_path(i.id)  %>
			<% end %>	
		<% end %>
	</div>
</div>
