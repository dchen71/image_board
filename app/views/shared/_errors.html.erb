<% unless flash[:error].nil? %>
<div class="alert alert-danger">
	<button type="button" class="close" data-dismiss="alert" >×</button>
	<strong><%= flash[:error] %></strong>
</div>
<% end %>
       
<% if flash[:success] %>
	<div class="alert alert-success">
		<button type="button" class="close" data-dismiss="alert" >×</button>
		<strong><%= flash[:success] %></strong>
	</div>
<% end %>
